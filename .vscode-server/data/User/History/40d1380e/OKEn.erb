<div class="contact-form">
  <%= form_with model: @contact, local: true do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    
    <div class="field">
      <%= form.label :message %>
      <%= form.text_area :message %>
    </div>
    
    <div class="actions">
      <%= form.submit "Send" %>
    </div>
  <% end %>
</div>
