<div class="container">
  <h1>Edit <%= @page.title %> Page</h1>

  <%= form_with model: @page, local: true do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title, readonly: true %>
    </div>
    <div>
      <%= form.label :content %><br>
      <%= form.text_area :content, rows: 10 %>
    </div>
    <div>
      <%= form.submit 'Save', class: 'button is-primary' %>
    </div>
  <% end %>
</div>
