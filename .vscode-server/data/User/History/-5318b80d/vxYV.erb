<% if @page %>
  <div class="container">
    <h1><%= @page.title %></h1>
    <div><%= @page.content.html_safe %></div>
    <% if @page.permalink == 'contact' %>
      <%= render 'contacts/form', contact: @contact %>
    <% end %>
  </div>
<% else %>
  <div class="container">
    <h1>Page not found</h1>
  </div>
<% end %>
