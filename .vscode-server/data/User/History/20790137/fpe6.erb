<form action="/checkout/create" method="post">
  <div class="field">
    <label for="order_address">Address</label>
    <input type="text" name="order[address]" id="order_address" required="required">
  </div>
  <div class="field">
    <label for="order_payment_method">Payment method</label>
    <select name="order[payment_method]" id="order_payment_method" required="required">
      <option value="Credit Card">Credit Card</option>
      <option value="PayPal">PayPal</option>
    </select>
  </div>
  <div class="actions">
    <input type="submit" name="commit" value="Place Order" class="button is-primary" data-disable-with="Place Order">
  </div>
</form>
